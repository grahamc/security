$trash_url  = sprintf( '?page=%s&action=%s&form=%s&entry=%s'
,$_REQUEST['page'], 'trash', $this->id, $item['ID'] );
	
[...]
	
$new_url = sprintf( '?page=%s&action=%s&form=%s&entry=%s'
,$_REQUEST['page'], 'new', $this->id, $item['ID'] );
	
